<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".ConfirmationDataActivity"
    android:orientation="vertical">
    1<!--st container-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="13dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/leftarrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/dm_sansbold"
                android:text="Confirmation"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            </LinearLayout>

       <!-- profile container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border_roundcorner"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/profile"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arya Wijiya"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sansbold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Designer"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sansmedium"/>
            </LinearLayout>
        </LinearLayout>

        <!--cv container-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border_roundcorner"
            android:layout_marginHorizontal="35dp"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/document1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JohnClain-CV.pdf"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sansbold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.78kb"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dmsans_regular"/>
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

    <!-- 2nd container-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_uppercorner"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:background="@drawable/upperbar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/roundchecked"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="45dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmation Data"
                android:textAlignment="center"
                android:textSize="23sp"
                android:fontFamily="@font/dm_sansbold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="20dp"
                android:textSize="15sp"
                android:textAlignment="center"
                android:fontFamily="@font/dmsans_regular"
                android:text="You have been shortlisted for the said Internship on the basis of percentage criteria you have secured in the jobby"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/confirmationData_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_corner"
                android:gravity="center"
                android:padding="17dp"
                android:textAllCaps="false"
                android:text="Confirmation Data"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>



    </LinearLayout>